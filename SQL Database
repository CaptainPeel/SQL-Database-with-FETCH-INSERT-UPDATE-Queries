create table patient(
  P_Code integer, 
  P_SurName varchar(100), 
  P_FirstName varchar(100),
  Sex varchar(100),
  DoB date,
  Occupation varchar(100),
  Height varchar(100),
  Weight varchar(100),
  Address varchar(100),
  MobileNum BigInt not null,
  PRIMARY KEY (P_CODE)
);

