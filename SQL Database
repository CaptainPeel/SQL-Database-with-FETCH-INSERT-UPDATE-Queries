create table doctor(
  D_Code integer,
D_SurName varchar(100), 
D_FirstName varchar(100), 
D_PrivateAddress varchar(100),
 D_MobileNum BigInt not null,
Department varchar(100),
  PRIMARY KEY (D_Code)
);


insert into doctor values (444,'Shipman', 'Mick', 'Liverpool', 65465432188,'Neurology');
