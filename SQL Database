create table examined(
  P_Code integer,
  D_Code integer,
  Date date, 
  Time time, 
  Location varchar(100),
  FOREIGN KEY(P_Code) REFERENCES patient (P_Code),
  FOREIGN KEY (D_Code) REFERENCES doctor (D_Code)
);

