create table operation(
  O_Code integer,
  P_Code integer,
  D_Code integer,
  Date date,
  Time time,
  Result varchar(100),
  O_Type varchar(100),
  PRIMARY KEY(O_CODE),
  FOREIGN KEY(P_Code) REFERENCES patient (P_Code),
  FOREIGN KEY(D_Code) REFERENCES doctor (D_Code)
  );

